<%- include('header') -%>
        <div class="box" id="heading">
            <h1><%= listTitle %></h1>
            <p><%= state %></p>
        </div>
        <div class="box">
            <% newItem.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" onchange="this.form.submit()" value=<%= item._id %> name="selected">
                    <p><%= item.name %></p>
                    <input type="hidden" value=<%= listTitle %> name="list">
                </div>
            </form>
            <% }) %>
            <form class="item" action="/" method="post">
                <input type="text" id="bullet" name="bp" placeholder="New Item">
                <button type="submit" name="list" value=<%= listTitle %>>+</button>
            </form>
        </div>
    </body>
<%- include('footer') -%>