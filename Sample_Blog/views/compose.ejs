<%- include('partials/header') -%>
<div class="container-fluid justify-content-center"></div>
    <form action="/compose" method="post">
        <div class="container col-4 my-5">
            <div class="row">
                <label class="form-label">Blog Post Title</label>
                <input class="form-control form-control-lg mb-3" type="text" name="title" placeholder="Your Title" required="true">
            </div>
            <div class="row">
                <label class="form-label">Your Post</label>
                <textarea class="form-control form-control-lg mb-3" type="text" name="body" placeholder="Type your post here..." rows="10"></textarea>
            </div>
            <div class="row">
                <button class="col-3 btn btn-dark" type="submit">Send</button>
            </div>
        </div>
    </form>
</div>
<%- include('partials/footer') -%>